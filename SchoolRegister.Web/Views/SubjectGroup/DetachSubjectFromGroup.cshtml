@model SchoolRegister.ViewModels.DTOs.AttachDetachSubjectWithGroupDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = $"{Localizer["DetachSubjectFromGroup"].Value} {ViewBag.GroupName}";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DetachSubjectFromGroup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="GroupId" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">@Localizer["Subject"]</label>
                <select asp-for="SubjectId" class="form-control"
                        asp-items="@ViewBag.SubjectsSelectList"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Detach"]" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Group" asp-action="Index">@Localizer["BackToList"]</a>
</div>

