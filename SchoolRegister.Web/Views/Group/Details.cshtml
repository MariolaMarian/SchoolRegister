@model SchoolRegister.ViewModels.VMs.GroupVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Details"].Value + " - " + Localizer["Group"].Value + " " + Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label>@Localizer["Name"]</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label>@Localizer["Students"]</label>
        </dt>
        <dd class="col-sm-10">
            @foreach (var student in Model.Students)
            {
                @Html.DisplayFor(modelItem => student.FirstName)
                @Html.Raw(" ");
                @Html.DisplayFor(modelItem => student.LastName)
                @Html.Raw(", ");

            }
        </dd>
        <dt class="col-sm-2">
            <label>@Localizer["Subjects"]</label>
        </dt>
        <dd class="col-sm-10">
            @foreach (var subject in Model.Subjects)
            {
                @Html.DisplayFor(modelItem => subject.Name)
                @Html.Raw(", ");

            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>